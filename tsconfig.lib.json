{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./dist",
    "incremental": false,
    "noEmit": false,
    "tsBuildInfoFile": "./dist/.tsbuildinfo"
  },
  "include": [
    "src/components/**/*",
    "src/lib/**/*",
    "src/index.ts"
  ],
  "exclude": [
    "src/app/**/*",
    "node_modules"
  ]
}
